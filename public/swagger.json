  "info": {
    "title": "Stepture API",
    "description": "API documentation for Stepture Backend",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "schemas": {
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "The email of the user",
            "example": "user@example.com"
          },
          "name": {
            "type": "string",
            "description": "The full name of the user",
            "example": "John Doe"
          },
          "image": {
            "type": "string",
            "description": "URL to the user's profile image",
            "example": "https://example.com/avatar.jpg"
          },
          "googleId": {
            "type": "string",
            "description": "Google OAuth ID",
            "example": "google-oauth2|1234567890"
          },
          "accessToken": {
            "type": "string",
            "description": "Google OAuth Access Token",
            "example": "ya29.a0AfH6SMBx..."
          },
          "refreshToken": {
            "type": "string",
            "description": "Google OAuth Refresh Token",
            "example": "1//0g9a8hR...Rfa"
          },
          "expiresAt": {
            "format": "date-time",
            "type": "string",
            "description": "Access token expiry date",
            "example": "2025-06-11T12:34:56.789Z"
          },
          "googleDriveRootFolderId": {
            "type": "string",
            "description": "Google Drive Root Folder ID for the user",
            "example": "0AJ9aBcD1EfGhUk9PVA"
          }
        },
        "required": [
          "email",
          "googleId",
          "accessToken",
          "expiresAt"
        ]
      },
      "StepType": {
        "type": "string",
        "enum": [
          "STEP",
          "TIPS",
          "HEADER",
          "ALERT"
        ],
        "description": "Type of step in the documentation"
      },
      "CreateScreenshotDto": {
        "type": "object",
        "properties": {
          "googleImageId": {
            "type": "string",
            "description": "Google Drive image ID",
            "example": "1A2B3C4D5E6F7G8H9I0J"
          },
          "url": {
            "type": "string",
            "description": "Screenshot image URL",
            "example": "https://lh3.googleusercontent.com/d/1A2B3C4D5E6F7G8H9I0J",
            "format": "url"
          },
          "viewportX": {
            "type": "number",
            "description": "Viewport width in pixels",
            "example": 1920,
            "minimum": 1
          },
          "viewportY": {
            "type": "number",
            "description": "Viewport height in pixels",
            "example": 1080,
            "minimum": 1
          },
          "viewportWidth": {
            "type": "number",
            "description": "viewportWidth coordinate where screenshot was taken",
            "example": 0,
            "minimum": 0
          },
          "viewportHeight": {
            "type": "number",
            "description": "viewportHeight coordinate where screenshot was taken",
            "example": 0,
            "minimum": 0
          },
          "devicePixelRatio": {
            "type": "number",
            "description": "Device pixel ratio used for the screenshot",
            "example": 1,
            "minimum": 0.1,
            "maximum": 5
          }
        },
        "required": [
          "googleImageId",
          "url",
          "viewportX",
          "viewportY",
          "viewportWidth",
          "viewportHeight",
          "devicePixelRatio"
        ]
      },
      "CreateStepDto": {
        "type": "object",
        "properties": {
          "stepDescription": {
            "type": "string",
            "description": "Detailed description of what this step involves",
            "example": "Click on the \"Sign In\" button located in the top right corner",
            "minLength": 1,
            "maxLength": 500
          },
          "stepNumber": {
            "type": "number",
            "description": "The number/order of this step in the document",
            "example": 1,
            "minimum": 1
          },
          "type": {
            "description": "Type of step in the documentation",
            "example": "STEP",
            "examples": {
              "Regular Step": {
                "value": "STEP",
                "description": "A regular action step"
              },
              "Tip": {
                "value": "TIPS",
                "description": "A helpful tip or note"
              },
              "Header": {
                "value": "HEADER",
                "description": "A section header"
              },
              "Alert": {
                "value": "ALERT",
                "description": "Important warning or alert"
              }
            },
            "allOf": [
              {
                "$ref": "#/components/schemas/StepType"
              }
            ]
          },
          "screenshot": {
            "description": "Optional screenshot that demonstrates this step",
            "nullable": true,
            "allOf": [
              {
                "$ref": "#/components/schemas/CreateScreenshotDto"
              }
            ]
          }
        },
        "required": [
          "stepDescription",
          "stepNumber",
          "type"
        ]
      },
      "PartialUpdateDocumentDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the document",
            "example": "Updated Document Title",
            "minLength": 1,
            "maxLength": 200
          },
          "description": {
            "type": "string",
            "description": "Optional detailed description of what this document covers",
            "example": "Updated description of the document",
            "nullable": true,
            "maxLength": 1000
          }
        }
      },
      "CreateDocumentDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the document",
            "example": "How to Login to Admin Dashboard",
            "minLength": 1,
            "maxLength": 200
          },
          "description": {
            "type": "string",
            "description": "Optional detailed description of what this document covers",
            "example": "A comprehensive step-by-step guide for new administrators to access the dashboard",
            "nullable": true,
            "maxLength": 1000
          },
          "steps": {
            "description": "Array of steps that make up this document",
            "minItems": 1,
            "maxItems": 100,
            "example": [
              {
                "stepNumber": 1,
                "stepDescription": "Navigate to the login page at https://admin.example.com",
                "type": "STEP",
                "screenshot": {
                  "url": "https://example.com/screenshots/login-page.png",
                  "viewportX": 1920,
                  "viewportY": 1080,
                  "viewportWidth": 0,
                  "viewportHeight": 0,
                  "devicePixelRatio": 1
                }
              },
              {
                "stepNumber": 2,
                "stepDescription": "Remember to use your corporate email address",
                "type": "TIPS"
              },
              {
                "stepNumber": 3,
                "stepDescription": "Enter your email address in the username field",
                "type": "STEP",
                "screenshot": {
                  "url": "https://example.com/screenshots/username-field.png",
                  "viewportX": 1920,
                  "viewportY": 1080,
                  "viewportWidth": 0,
                  "viewportHeight": 100,
                  "devicePixelRatio": 1
                }
              },
              {
                "stepNumber": 4,
                "stepDescription": "Enter your password in the password field",
                "type": "STEP"
              },
              {
                "stepNumber": 5,
                "stepDescription": "Make sure your password meets the security requirements",
                "type": "ALERT"
              },
              {
                "stepNumber": 6,
                "stepDescription": "Click the \"Sign In\" button to authenticate",
                "type": "STEP",
                "screenshot": {
                  "url": "https://example.com/screenshots/signin-button.png",
                  "viewportX": 1920,
                  "viewportY": 1080,
                  "viewportWidth": 0,
                  "viewportHeight": 200,
                  "devicePixelRatio": 1
                }
              }
            ],
            "items": {
              "type": "array"
            },
            "type": "array"
          }
        },
        "required": [
          "title",
          "steps"
        ]
      }
    }
  }
}