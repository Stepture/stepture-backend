    "/step/{id}": {
      "delete": {
        "operationId": "StepController_deleteStep",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Step ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Step deleted successfully. Associated screenshot will also be removed if it exists.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Step deleted successfully"
                    },
                    "deletedStep": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "step-123"
                        },
                        "stepDescription": {
                          "type": "string",
                          "example": "Click the login button"
                        },
                        "stepNumber": {
                          "type": "number",
                          "example": 1.5
                        },
                        "type": {
                          "type": "string",
                          "example": "STEP"
                        },
                        "documentId": {
                          "type": "string",
                          "example": "doc-456"
                        },
                        "hadScreenshot": {
                          "type": "boolean",
                          "example": true
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Step not found or access denied"
          },
          "404": {
            "description": "Step not found"
          }
        },
        "tags": [
          "step"
        ]
      }
    },
