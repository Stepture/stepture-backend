  "info": {
    "title": "Stepture API",
    "description": "API documentation for Stepture Backend",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "schemas": {
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "The email of the user",
            "example": "user@example.com"
          },
          "name": {
            "type": "string",
            "description": "The full name of the user",
            "example": "John Doe"
          },
          "image": {
            "type": "string",
            "description": "URL to the user's profile image",
            "example": "https://example.com/avatar.jpg"
          },
          "googleId": {
            "type": "string",
            "description": "Google OAuth ID",
            "example": "google-oauth2|1234567890"
          },
          "accessToken": {
            "type": "string",
            "description": "Google OAuth Access Token",
            "example": "ya29.a0AfH6SMBx..."
          },
          "refreshToken": {
            "type": "string",
            "description": "Google OAuth Refresh Token",
            "example": "1//0g9a8hR...Rfa"
          },
          "expiresAt": {
            "format": "date-time",
            "type": "string",
            "description": "Access token expiry date",
            "example": "2025-06-11T12:34:56.789Z"
          },
          "googleDriveRootFolderId": {
            "type": "string",
            "description": "Google Drive Root Folder ID for the user",
            "example": "0AJ9aBcD1EfGhUk9PVA"
          }
        },
        "required": [
          "email",
          "googleId",
          "accessToken",
          "expiresAt"
        ]
      },
      "StepType": {
        "type": "string",
        "enum": [
          "STEP",
          "TIPS",
          "HEADER",
          "ALERT"
        ],
        "description": "Type of step in the documentation"
      },
      "CreateScreenshotDto": {
        "type": "object",
        "properties": {
          "googleImageId": {
            "type": "string",
            "description": "Google Drive image ID",
            "example": "1A2B3C4D5E6F7G8H9I0J"
          },
          "url": {
            "type": "string",
            "description": "Screenshot image URL",
            "example": "https://lh3.googleusercontent.com/d/1A2B3C4D5E6F7G8H9I0J",
            "format": "url"
          },
          "viewportX": {
            "type": "number",
            "description": "Viewport width in pixels",
            "example": 1920,
            "minimum": 1
          },
          "viewportY": {
            "type": "number",
            "description": "Viewport height in pixels",
            "example": 1080,
            "minimum": 1
          },
          "viewportWidth": {
            "type": "number",
            "description": "viewportWidth coordinate where screenshot was taken",
            "example": 0,
            "minimum": 0
          },
          "viewportHeight": {
            "type": "number",
            "description": "viewportHeight coordinate where screenshot was taken",
            "example": 0,
            "minimum": 0
          },
          "devicePixelRatio": {
            "type": "number",
            "description": "Device pixel ratio used for the screenshot",
            "example": 1,
            "minimum": 0.1,
            "maximum": 5
          }
        },
        "required": [
          "googleImageId",
          "url",
          "viewportX",
          "viewportY",
          "viewportWidth",
          "viewportHeight",
          "devicePixelRatio"
        ]
      },
      "CreateStepDto": {
        "type": "object",
        "properties": {
          "stepDescription": {
            "type": "string",
            "description": "Detailed description of what this step involves",
            "example": "Click on the \"Sign In\" button located in the top right corner",
            "minLength": 1,
            "maxLength": 500
          },
          "stepNumber": {
            "type": "number",
            "description": "The number/order of this step in the document",
            "example": 1,
            "minimum": 1
          },
          "type": {
            "description": "Type of step in the documentation",
            "example": "STEP",
            "examples": {
              "Regular Step": {
                "value": "STEP",
                "description": "A regular action step"
              },
              "Tip": {
                "value": "TIPS",
                "description": "A helpful tip or note"
              },
              "Header": {
                "value": "HEADER",
                "description": "A section header"
              },
              "Alert": {
                "value": "ALERT",
                "description": "Important warning or alert"
              }
            },
            "allOf": [
              {
                "$ref": "#/components/schemas/StepType"
              }
            ]
          },
          "screenshot": {
            "description": "Optional screenshot that demonstrates this step",
            "nullable": true,
            "allOf": [
              {
                "$ref": "#/components/schemas/CreateScreenshotDto"
              }
            ]
          }
        },
        "required": [
          "stepDescription",
          "stepNumber",
          "type"
        ]
      },
      "Color": {
        "type": "string",
        "enum": [
          "GREEN",
          "BLUE",
          "YELLOW"
        ],
        "description": "Color for document annotations"
      },
      "UpdateDocumentWithStepsDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the document",
            "example": "Updated: How to Login to Admin Dashboard",
            "minLength": 1,
            "maxLength": 200
          },
          "description": {
            "type": "string",
            "description": "Optional detailed description of what this document covers",
            "example": "An updated comprehensive step-by-step guide for administrators",
            "nullable": true,
            "maxLength": 1000
          },
          "annotationColor": {
            "description": "Color for document annotations",
            "example": "BLUE",
            "allOf": [
              {
                "$ref": "#/components/schemas/Color"
              }
            ]
          },
          "steps": {
            "description": "Array of steps to update/add/delete",
            "items": {
              "type": "array"
            },
            "type": "array"
          },
          "deleteStepIds": {
            "description": "Array of step IDs to delete",
            "example": [
              "0197c6c1-0666-7be1-bb32-464e9cd7789c"
            ],
            "items": {
              "type": "array"
            },
            "type": "array"
          }
        }
      },
      "UpdateDocumentSharingDto": {
        "type": "object",
        "properties": {
          "isPublic": {
            "type": "boolean",
            "description": "Whether the document should be public or private",
            "example": true
          }
        },
        "required": [
          "isPublic"
        ]
      },
      "SaveOthersDocumentDto": {
        "type": "object",
        "properties": {
          "documentId": {
            "type": "string",
            "description": "The ID of the document to save",
            "example": "0197c6c1-0666-7be1-bb32-464e9cd7789c"
          }
        },
        "required": [
          "documentId"
        ]
      },
      "DocumentSummaryDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "uuid-here",
            "description": "Document unique identifier"
          },
          "title": {
            "type": "string",
            "example": "How to create a React app",
            "description": "Document title"
          },
          "description": {
            "type": "string",
            "example": "Step-by-step guide to create a React application",
            "description": "Document description"
          },
          "estimatedCompletionTime": {
            "type": "number",
            "example": 300,
            "description": "Estimated completion time in seconds"
          },
          "createdAt": {
            "format": "date-time",
            "type": "string",
            "example": "2024-01-15T10:30:00Z",
            "description": "When document was created"
          },
          "updatedAt": {
            "format": "date-time",
            "type": "string",
            "example": "2024-01-15T10:30:00Z",
            "description": "When document was last updated"
          },
          "annotationColor": {
            "type": "string",
            "example": "BLUE",
            "description": "Annotation color"
          },
          "user": {
            "type": "object",
            "description": "Document author information",
            "example": {
              "id": "user-uuid",
              "name": "John Doe",
              "email": "john@example.com"
            }
          },
          "_count": {
            "type": "object",
            "description": "Step count information",
            "example": {
              "steps": 5
            }
          }
        },
        "required": [
          "id",
          "title",
          "createdAt",
          "updatedAt",
          "annotationColor",
          "user",
          "_count"
        ]
      },
      "RecentDocumentSummaryDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "uuid-here",
            "description": "Document unique identifier"
          },
          "title": {
            "type": "string",
            "example": "How to create a React app",
            "description": "Document title"
          },
          "description": {
            "type": "string",
            "example": "Step-by-step guide to create a React application",
            "description": "Document description"
          },
          "estimatedCompletionTime": {
            "type": "number",
            "example": 300,
            "description": "Estimated completion time in seconds"
          },
          "createdAt": {
            "format": "date-time",
            "type": "string",
            "example": "2024-01-15T10:30:00Z",
            "description": "When document was created"
          },
          "updatedAt": {
            "format": "date-time",
            "type": "string",
            "example": "2024-01-15T10:30:00Z",
            "description": "When document was last updated"
          },
          "annotationColor": {
            "type": "string",
            "example": "BLUE",
            "description": "Annotation color"
          },
          "user": {
            "type": "object",
            "description": "Document author information",
            "example": {
              "id": "user-uuid",
              "name": "John Doe",
              "email": "john@example.com"
            }
          },
